@import "2013/_common"

body
  #header

    #header-gloves
      position: relative
      .nav-account
        position: absolute
        top: 30px
        right: 0px
        z-index: 100

    .header
      background: black
      .header-inner
        min-height: 441px
        background: url('/images/2013/gloves-bg.jpg') no-repeat center center
        position: relative

      .logo
        background: transparent url('/images/2013/nko-logo.png') no-repeat center center
        width: 393px
        height: 73px
        text-indent: -9999px
        display: block
        z-index: 100
        position: absolute
        margin-left: -196px
        left: 50%
        top: 350px

      .header-inner.voting
        // background: #000
        background: #181818
        border-bottom: 5px solid #353439
        .votenow
          position absolute
          top 242px
          left 50%
          font-size 20px
          text-transform uppercase
          padding 20px
          border-radius 8px
          box-shadow 0 0 30px rgba(0,0,0,.8)
          width 250px
          margin-left -125px
          letter-spacing 1px
        .logo
          top: 135px


    .navbar-header
      position: absolute
      right: 10px
      top: 0

    .nav-wrapper
      text-align: center
      padding: 10px 0
      nav, .nav-inner
        background: none
        .col
          position: static

      a
        display: inline-block
        margin: 2px 5px
        padding: 5px 4px
        font-family: franklin
        text-transform: uppercase
        font-size: 12px
        letter-spacing: 1px
        line-height: 1.2
        border-radius: 2px
        text-shadow: none

        color: #fff
        &:hover
          background-color: rgba(201, 59, 71, .9)
          text-decoration: none
          transition: .2s

      li.active a
        background-color: rgba(185, 46, 74, 1)

    &.affix-top
      nav, .navbar-nav
        float: none !important
        text-align: center
        width 80%
        margin 3px auto
        position relative

        .caret
          border-top-color #fff
          border-bottom-color #fff

        ul.dropdown-menu
          position absolute
          top 32px
          right 120px
          padding 0
          li
            color #333
            a
              display block
              text-align left
              color #333
              &:hover
                color #fff
      nav
        padding-left: 0
        padding-right: 0
      .nav-wrapper
        padding-top: 8px
        padding-bottom: 0
        a
          margin: 5px 3px
          padding: 9px 13px
          padding-bottom: 3px
      .navbar-header
        position: absolute
        right: 10px
        top: 22px


    &.affix
      position: static
      .affix-inner
        position: fixed
        left: 0
        right: 0
        top: 0
        height: 50px
        z-index: 30
        .header
          height: 50px
          overflow: hidden
          opacity: 0.96
          background-color #9F2C38
          .container
            position: relative
            max-width: 900px
        .logo
          display: none !important

        .gloves
          width: 190px
          height: 99px
          background-size: 100% 100%
          opacity: 0.3
          width: 802px;
          background-size: cover;
          z-index: 1;
          height: 500px;
          position: absolute
          top: -171px;
          left: 155px;

      .affix-placeholder
        height: 495px

  @media (max-width: 767px)
    #header
      #header-gloves .nav-account
        position: static
        padding-top: 89px
        button
          position: absolute
          top: 30px
          left: 10px
      .header
        .header-inner
          background: #353439
          min-height: 0px
          height: 100px
          overflow: hidden
          margin-bottom: -40px
          .logo
            margin: auto
            left: 0
            right: 0
            top: 12px
          &.voting
            .logo
              top: 12px
        .affix-inner
          min-height: 0
          height: 147px
          background-size: 80%
          background-position: center center
      &.affix-top .logo-sm
        display: none

