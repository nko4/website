franklin = 'franklin-gothic-urw',Helvetica,Arial,sans-serif
league-gothic = "league-gothic"


icon(name, width, height)
  text-indent: -9999px
  display: inline-block
  background-repeat: no-repeat
  background-image: url('/images/2013/icon-'+name+'.png')
  background-size: cover
  width: width
  height: height


button, input[type=submit], a.button
  white-space nowrap
  &.scary
    background-color #CA3C49
    color white !important
    border: none
    border-radius 5px
    padding 10px 20px
    &:hover
      text-decoration none
      background-color hsl(0, 80%, 60%)